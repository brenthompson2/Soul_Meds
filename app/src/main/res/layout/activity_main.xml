<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brendansapps.soulmeds.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/homescreen">

    <Button
        android:id="@+id/btn_Alarm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_prescription"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_Folder"
        app:layout_constraintEnd_toStartOf="@+id/btn_Folder"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Quote"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_911"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_Help"
        app:layout_constraintEnd_toStartOf="@+id/btn_Help"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Folder"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_rescources"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_Alarm"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Help"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_Quote"
        app:layout_constraintTop_toBottomOf="@+id/btn_Folder" />

</android.support.constraint.ConstraintLayout>
